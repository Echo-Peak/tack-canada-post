{
  "manifest_version": 2,

  "name": "Track with Canada Post(context menu)",
  "description": "Highlight a tracking number & right click to track with Canada Post",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Track with Canada Post"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ]
}
